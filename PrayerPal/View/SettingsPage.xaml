<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrayerPal.View.SettingsPage"
             Title="SettingsPage"
             Shell.BackgroundColor="black">

    <Shell.TitleView >
        <Grid>
            <Label FontSize="Title"  Text="Settings" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>
    <VerticalStackLayout>
        <Label 
            Text="Settings"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
      x:Name="CounterBtn"
      Text="Start Services"
      Clicked="OnServiceStartClicked"
      HorizontalOptions="Center" />

        <Button Text="Stop Service" Clicked="Button_Clicked"></Button>

        <Button Text="Vibrate" Clicked="Button_Clicked_1"></Button>
    </VerticalStackLayout>
</ContentPage>